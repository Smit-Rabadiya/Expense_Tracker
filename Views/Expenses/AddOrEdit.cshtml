@model Demo.Models.Expenses
@{
    ViewData["Title"] = "Expenses";
}


<div class="row">
    <div class="col-md-6 offset-md-3">
        <h3>Add Expense</h3>
        <form method="post" asp-action="AddOrEdit" autocomplete="off">
            <div class="border p-3 mt-4">
                <div class="row pb-2">
                    <h2 class="text-primary"></h2>
                    <hr />
                </div>
                <input type="hidden" asp-for="ExpenseId" />
                <input type="hidden" asp-for="Date" />
                <div class="form-group mb-3">
                    <label asp-for="Title"></label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Description"></label>
                    <input asp-for="Description" class="form-control" />
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Amount"></label>
                    <input asp-for="Amount" class="form-control" type="int"/>
                    <span asp-validation-for="Amount" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Category"></label>
                    <input asp-for="Category" class="form-control" />
                    <span asp-validation-for="Category" class="text-danger"></span>
                </div>
                <button type="submit" class=" btn btn-primary" style="font-size:larger;height:60px;width:150px">SUBMIT</button>&nbsp;&nbsp;&nbsp;&nbsp;
                <a asp-controller="Expenses" asp-action="Index" class="btn btn-secondary" style="width:150px">Back to Dashboard</a>
            </div>
        </form>
    </div>
</div>



@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
        //<partial name="_ValidationScriptsPartial" />
    }
}